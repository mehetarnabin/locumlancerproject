{% extends 'provider/base.html.twig' %}

{% block title %}Experience{% endblock %}

{% block provider_body %}
    <div class="content-header">
        <div class="d-flex align-items-center">
            <div class="me-auto">
                <h3 class="page-title">Experience</h3>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="row">
            <div class="col-12">
                <table class="table">
                    <tbody>
                    <tr>
                        <th>School</th>
                        <td>{{ experience.school }}</td>
                    </tr>
                    <tr>
                        <th>Degree</th>
                        <td>{{ experience.degree }}</td>
                    </tr>
                    <tr>
                        <th>Field Of Study</th>
                        <td>{{ experience.fieldOfStudy }}</td>
                    </tr>
                    <tr>
                        <th>Start Date</th>
                        <td>{{ experience.startDate ? experience.startDate|date('m/d/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>End Date</th>
                        <td>{{ experience.endDate ? experience.endDate|date('m/d/Y') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Grade</th>
                        <td>{{ experience.grade }}</td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>{{ experience.description }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

    {{ include('provider/experience/_delete_form.html.twig') }}
{% endblock %}
