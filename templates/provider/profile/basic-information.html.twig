{% extends 'provider/base.html.twig' %}

{% block title %}Basic Information{% endblock %}

{% block provider_body %}
<style>
/* Override container-xl to shift content left and remove left spacing */
.container-xl {
    margin-left: 0 !important;
    padding-left: 0 !important;
    max-width: 100% !important;
    transform: translateX(-80px) !important; /* Shift entire container to the left */
}

/* Override app-content padding from base template to remove left spacing */
.app-content {
    padding-left: 0 !important;
}
</style>
    <div class="container-xl">
        <h1 class="app-page-title">Basic Information</h1>
        <div class="section-intro">Provide your up-to-date personal and contact information.</div>

        <hr class="mb-4">

        {{ form_start(form, {'attr': {'class': 'basic-information-form needs-validation', 'novalidate': 'novalidate'}}) }}

        {{ form_errors(form) }}
        <div class="row g-4 settings-section">
            <div class="col-12 col-md-4">
                <h3 class="section-title">Personal Information</h3>
                <div class="section-intro">Please provide your personal information to complete your profile.</div>
            </div>
            <div class="col-12 col-md-8">
                <div class="app-card app-card-settings shadow-sm p-4">

                    <div class="app-card-body">
                        <div class="mb-3">
                            {{ form_label(form.name, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.name, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.name) }}
                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="mb-3">
                                    {{ form_label(form.suffix, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.suffix, {'attr':{'class': 'form-control'}}) }}
                                    {{ form_errors(form.suffix) }}
                                </div>
                            </div>
                            <div class="col">
                                <div class="mb-3">
                                    {{ form_label(form.title, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.title, {'attr':{'class': 'form-control'}}) }}
                                    {{ form_errors(form.title) }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.npiNumber, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.npiNumber, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.npiNumber) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <hr class="my-4">

        <div class="row g-4 settings-section">
            <div class="col-12 col-md-4">
                <h3 class="section-title">Contact Information</h3>
                <div class="section-intro">Please provide your contact information to help us reach you.</div>
            </div>
            <div class="col-12 col-md-8">
                <div class="app-card app-card-settings shadow-sm p-4">
                    <div class="app-card-body">
                        <div class="mb-3">
                            {{ form_label(form.country, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.country, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.country) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.state, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.state, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.state) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.city, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.city, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.city) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.zipCode, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.zipCode, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.zipCode) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(form.streetAddress, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.streetAddress, {'attr':{'class': 'form-control'}}) }}
                            {{ form_errors(form.streetAddress) }}
                        </div>

                        <div class="row">
                            <strong>Phone Number</strong><br/>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.phoneHome, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.phoneHome, {'attr':{'class': 'form-control'}}) }}
                                    {{ form_errors(form.phoneHome) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.phoneWork, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.phoneWork, {'attr':{'class': 'form-control'}}) }}
                                    {{ form_errors(form.phoneWork) }}
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="mb-3">
                                    {{ form_label(form.phoneMobile, null, {'label_attr': {'class': 'form-label'}}) }}
                                    {{ form_widget(form.phoneMobile, {'attr':{'class': 'form-control'}}) }}
                                    {{ form_errors(form.phoneMobile) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4 settings-section">
            <div class="col-12 col-md-4"></div>
            <div class="col-12 col-md-8">
                <button class="btn btn-primary mt-2">{{ button_label|default('Save') }}</button>
                <button class="btn btn-primary mt-2" name="save_continue" value="1">{{ button_label|default('Save and Continue') }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}

{% block footer_scripts %}
    <script src="{{ asset('assets/admin/js/form-validation.js') }}"></script>
{% endblock %}