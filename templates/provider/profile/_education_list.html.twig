{% for education in educations %}
<div class="col-md-6">
  <div class="card ed-card">
    <div class="card-body">
      <div class="d-flex justify-content-between align-items-start mb-3">
        <div class="d-flex align-items-center gap-2">
          <input type="checkbox" class="education-checkbox" data-id="{{ education.id }}" style="margin: 0;">
          <h5 class="card-title mb-0">{{ education.school }}</h5>
        </div>
        <div class="d-flex gap-2">
          <a href="#" class="edit-education" data-id="{{ education.id }}" title="Edit" style="padding: 4px;">
            <img src="/assets/icons/compose.png" class="icon-image" style="width: 18px; height: 18px;" />
          </a>
          <a href="#" class="delete-education" data-id="{{ education.id }}" style="padding: 4px;">
            <img src="/assets/icons/trash-bin.png" class="icon-image" style="width: 18px; height: 18px;" />
          </a>
        </div>
      </div>
      <p><strong>Degree Name:</strong> {{ education.degree }}</p>
      <p><i class="fa fa-map-marker-alt"></i> {{ education.country }}{% if education.state %}, {{ education.state }}{% endif %}{% if education.city %}, {{ education.city }}{% endif %}</p>
      <div class="d-flex gap-4 mt-3 pt-3" style="border-top: 1px solid #e6eef6;">
        <div>
          <p class="mb-1" style="font-size: 0.85rem; color: #6B7280;">Start Date</p>
          <p class="mb-0"><strong>{% if education.startDate %}{{ education.startDate|date('m/d/Y') }}{% else %}N/A{% endif %}</strong></p>
        </div>
        <div>
          <p class="mb-1" style="font-size: 0.85rem; color: #6B7280;">End Date</p>
          <p class="mb-0"><strong>{% if education.endDate %}{{ education.endDate|date('m/d/Y') }}{% else %}N/A{% endif %}</strong></p>
        </div>
      </div>
    </div>
  </div>
</div>
{% else %}
<div class="col-12">
  <p class="text-muted text-center py-4">No education entries yet. Click "Add New" to add your first entry.</p>
</div>
{% endfor %}

