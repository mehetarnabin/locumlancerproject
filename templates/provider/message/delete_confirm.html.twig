{% extends 'provider/base.html.twig' %}

{% block title %}Delete Message{% endblock %}

{% block provider_body %}
<div class="container-xl">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Delete Message</h5>
                </div>
                <div class="card-body">
                    <p>Are you sure you want to delete this message?</p>
                    
                    <div class="message-preview bg-light p-3 rounded mb-3">
                        <strong>From:</strong> {{ message.sender.name|default(message.sender.email) }}<br>
                        <strong>To:</strong> {{ message.receiver.name|default(message.receiver.email) }}<br>
                        <strong>Date:</strong> {{ message.createdAt|date('F j, Y g:i A') }}<br>
                        <strong>Preview:</strong> {{ message.text|slice(0, 100) }}{% if message.text|length > 100 %}...{% endif %}
                    </div>

                    <form method="post" action="{{ path('app_provider_message_delete', {'id': message.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ message.id) }}">
                        
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger">
                                Yes, Delete Message
                            </button>
                            <a href="{{ path('app_provider_messages') }}" class="btn btn-secondary">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}