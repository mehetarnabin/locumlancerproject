// ============================================================================
// FILE ATTACHMENT MANAGEMENT
// ============================================================================

// Initialize file attachment handling
function initializeFileAttachments() {
    const fileInput = document.getElementById('compose-attachment');
    const attachmentBtn = document.getElementById('attachment-btn');

    if (fileInput) {
        fileInput.addEventListener('change', function(e) {
            handleFileSelection(e.target.files);
        });
    }
}

// Handle file selection
function handleFileSelection(files) {
    if (!files || files.length === 0) return;

    // Convert FileList to array and add to selectedFiles
    const newFiles = Array.from(files);
    selectedFiles = [...selectedFiles, ...newFiles];
    
    updateFileDisplay();
    updateAttachmentButton();
}

// Update file display UI
function updateFileDisplay() {
    const attachmentDisplay = document.getElementById('file-attachment-display');
    const attachmentList = document.getElementById('file-attachment-list');
    
    if (!attachmentDisplay || !attachmentList) return;

    // Clear current list
    attachmentList.innerHTML = '';

    if (selectedFiles.length === 0) {
        attachmentDisplay.classList.remove('visible');
        return;
    }

    // Add each file to the display
    selectedFiles.forEach((file, index) => {
        const listItem = document.createElement('li');
        listItem.className = 'file-attachment-item';
        listItem.innerHTML = `
            <div class="file-attachment-info">
                <svg class="file-attachment-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <span class="file-attachment-name" title="${file.name}">${file.name}</span>
                <span class="file-attachment-size">${formatFileSize(file.size)}</span>
            </div>
            <button type="button" class="file-attachment-remove" onclick="removeSelectedFile(${index})" title="Remove file">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M18 6L6 18M6 6L18 18" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                </svg>
            </button>
        `;
        attachmentList.appendChild(listItem);
    });

    attachmentDisplay.classList.add('visible');
}

// Update attachment button state
function updateAttachmentButton() {
    const attachmentBtn = document.getElementById('attachment-btn');
    if (attachmentBtn) {
        if (selectedFiles.length > 0) {
            attachmentBtn.classList.add('has-attachment');
            attachmentBtn.title = `${selectedFiles.length} file(s) attached`;
        } else {
            attachmentBtn.classList.remove('has-attachment');
            attachmentBtn.title = 'Attach files';
        }
    }
}

// Remove selected file
function removeSelectedFile(index) {
    if (index >= 0 && index < selectedFiles.length) {
        selectedFiles.splice(index, 1);
        updateFileDisplay();
        updateAttachmentButton();
        updateFileInput();
    }
}

// Update the actual file input (since we can't directly set files for security reasons)
function updateFileInput() {
    const fileInput = document.getElementById('compose-attachment');
    if (!fileInput) return;

    // Clear the file input
    fileInput.value = '';
    
    // Note: We can't programmatically set files due to browser security
    // The files are stored in selectedFiles array and will be handled during form submission
}

// Format file size to human readable format
function formatFileSize(bytes) {
    if (bytes === 0) return '0 Bytes';
    
    const k = 1024;
    const sizes = ['Bytes', 'KB', 'MB', 'GB'];
    const i = Math.floor(Math.log(bytes) / Math.log(k));
    
    return parseFloat((bytes / Math.pow(k, i)).toFixed(2)) + ' ' + sizes[i];
}

// Clear all attachments when modal closes
function clearAttachments() {
    selectedFiles = [];
    updateFileDisplay();
    updateAttachmentButton();
    
    const fileInput = document.getElementById('compose-attachment');
    if (fileInput) {
        fileInput.value = '';
    }
}

// ============================================================================
// TRASH MANAGEMENT FUNCTIONS
// ============================================================================

// Restore message from trash
async function restoreMessage(messageId, button) {
    if (!confirm('Are you sure you want to restore this message?')) return;

    const originalContent = button.innerHTML;
    button.disabled = true;
    button.innerHTML = '<span class="loading-spinner"></span>';

    try {
        const response = await fetch(`/provider/messages/restore/${messageId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        });

        const result = await response.json();

        if (result.success) {
            // Remove the message item from UI
            const messageItem = button.closest('.message-item');
            messageItem.style.transition = 'all 0.3s ease';
            messageItem.style.opacity = '0';
            messageItem.style.transform = 'translateX(-20px)';
            
            setTimeout(() => {
                messageItem.remove();
                updateTrashCount();
                showToast('success', result.message || 'Message restored successfully');
                
                // If no more messages, show empty state
                if (document.querySelectorAll('.message-item').length === 0) {
                    showEmptyState();
                }
            }, 300);
        } else {
            showToast('error', result.message || 'Failed to restore message');
            button.innerHTML = originalContent;
            button.disabled = false;
        }
    } catch (error) {
        console.error('Error restoring message:', error);
        showToast('error', 'An error occurred while restoring the message');
        button.innerHTML = originalContent;
        button.disabled = false;
    }
}

// Permanently delete message from trash
async function permanentlyDeleteMessage(messageId, button) {
    if (!confirm('Are you sure you want to permanently delete this message? This action cannot be undone.')) return;

    const originalContent = button.innerHTML;
    button.disabled = true;
    button.innerHTML = '<span class="loading-spinner"></span>';

    try {
        const response = await fetch(`/provider/messages/permanent-delete/${messageId}`, {
            method: 'DELETE',
            headers: {
                'Content-Type': 'application/json',
            }
        });

