<script>
// ============================================================================
// MESSAGES SYSTEM - TRASH MANAGEMENT
// ============================================================================

// Draft functionality
let currentDraftId = null;

// File attachment management
let selectedFiles = [];

// Email Templates Configuration
const emailTemplates = {
