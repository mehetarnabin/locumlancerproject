    <script>
        // Initialize flatpickr
        document.addEventListener('DOMContentLoaded', function() {
            if (typeof flatpickr !== 'undefined') {
                document.querySelectorAll('.js-datepicker').forEach(function(input) {
                    if (!input._flatpickr) {
                        flatpickr(input, {
                            dateFormat: "Y-m-d"
