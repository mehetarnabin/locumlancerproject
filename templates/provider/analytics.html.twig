            </div>
            
            <!-- Application to Interview Ratio - ACTUAL DATA -->
            <div class="metric-bar mb-4">
                <div class="d-flex justify-content-between align-items-center mb-2">
                    <span class="fw-medium" style="font-size: 14px; color: #121C0C;">Application to Interview</span>
                    <span class="fw-bold" style="color: #85BB65;">
                        {% if totalApplications > 0 %}
                            {{ ((statusCounts.interview / totalApplications) * 100)|round(1) }}%
                        {% else %}
                            0%
                        {% endif %}
                    </span>
                </div>
                <div class="progress" style="height: 10px; background-color: #F4F9F1; border-radius: 5px;">
                    <div class="progress-bar" role="progressbar" 
                         style="width: {% if totalApplications > 0 %}{{ ((statusCounts.interview / totalApplications) * 100)|round(1) }}{% else %}0{% endif %}%; background-color: #10b981; border-radius: 5px;" 
                         aria-valuenow="{% if totalApplications > 0 %}{{ ((statusCounts.interview / totalApplications) * 100)|round(1) }}{% else %}0{% endif %}" 
                         aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            </div>
        </div>
    </div>
