{% extends 'provider/base.html.twig' %}

{% block title %}Profile Analytics | Locumlancer{% endblock %}

{% block provider_body %}
<div class="container-xl">
    <div class="app-page-title mb-4">Profile Analytics</div>
    
    <!-- Key Metrics Row -->
    <div class="row g-4 mb-4">
        <!-- Impressions Card -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="analytics-metric-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <div class="metric-label text-muted small mb-1">Total Impressions</div>
                        <div class="metric-value fw-bold" style="font-size: 2rem; color: #121C0C;">{{ impressions }}</div>
                    </div>
                    <div class="metric-icon" style="width: 48px; height: 48px; background: #EAF3E4; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.31-8.86c-1.77-.45-2.34-.94-2.34-1.67 0-.84.79-1.43 2.1-1.43 1.38 0 1.9.66 1.94 1.64h1.71c-.05-1.34-.87-2.57-2.49-2.97V5H10.9v1.69c-1.51.32-2.72 1.3-2.72 2.81 0 1.79 1.49 2.69 3.66 3.21 1.95.46 2.34 1.15 2.34 1.87 0 .53-.39 1.39-2.1 1.39-1.6 0-2.23-.72-2.32-1.64H8.04c.1 1.7 1.36 2.66 2.86 2.97V19h2.34v-1.67c1.52-.29 2.72-1.16 2.72-2.92 0-1.21-.49-2.19-3.55-2.68z" fill="#85BB65"/>
                        </svg>
                    </div>
                </div>
                <div class="metric-change text-success small">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                        <path d="M6 2L10 6H7V10H5V6H2L6 2Z" fill="#85BB65"/>
                    </svg>
                    +12% from last month
                </div>
            </div>
        </div>
        
        <!-- Profile Views Card -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="analytics-metric-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <div class="metric-label text-muted small mb-1">Profile Views</div>
                        <div class="metric-value fw-bold" style="font-size: 2rem; color: #121C0C;">{{ profileViews }}</div>
                    </div>
                    <div class="metric-icon" style="width: 48px; height: 48px; background: #EAF3E4; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M12 4.5C7 4.5 2.73 7.61 1 12c1.73 4.39 6 7.5 11 7.5s9.27-3.11 11-7.5c-1.73-4.39-6-7.5-11-7.5zM12 17c-2.76 0-5-2.24-5-5s2.24-5 5-5 5 2.24 5 5-2.24 5-5 5zm0-8c-1.66 0-3 1.34-3 3s1.34 3 3 3 3-1.34 3-3-1.34-3-3-3z" fill="#85BB65"/>
                        </svg>
                    </div>
                </div>
                <div class="metric-change text-success small">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                        <path d="M6 2L10 6H7V10H5V6H2L6 2Z" fill="#85BB65"/>
                    </svg>
                    +8% from last month
                </div>
            </div>
        </div>
        
        <!-- Resume Downloads Card -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="analytics-metric-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <div class="metric-label text-muted small mb-1">Resume Downloads</div>
                        <div class="metric-value fw-bold" style="font-size: 2rem; color: #121C0C;">{{ resumeDownloads }}</div>
                    </div>
                    <div class="metric-icon" style="width: 48px; height: 48px; background: #EAF3E4; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M19 9h-4V3H9v6H5l7 7 7-7zM5 18v2h14v-2H5z" fill="#85BB65"/>
                        </svg>
                    </div>
                </div>
                <div class="metric-change text-success small">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                        <path d="M6 2L10 6H7V10H5V6H2L6 2Z" fill="#85BB65"/>
                    </svg>
                    +15% from last month
                </div>
            </div>
        </div>
        
        <!-- Response Rate Card -->
        <div class="col-12 col-md-6 col-lg-3">
            <div class="analytics-metric-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-start mb-3">
                    <div>
                        <div class="metric-label text-muted small mb-1">Response Rate</div>
                        <div class="metric-value fw-bold" style="font-size: 2rem; color: #121C0C;">{{ responseRate }}%</div>
                    </div>
                    <div class="metric-icon" style="width: 48px; height: 48px; background: #EAF3E4; border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" fill="#85BB65"/>
                        </svg>
                    </div>
                </div>
                <div class="metric-change text-success small">
                    <svg width="12" height="12" viewBox="0 0 12 12" fill="none" xmlns="http://www.w3.org/2000/svg" style="display: inline-block; vertical-align: middle;">
                        <path d="M6 2L10 6H7V10H5V6H2L6 2Z" fill="#85BB65"/>
                    </svg>
                    +5% from last month
                </div>
            </div>
        </div>
    </div>
    
    <!-- Charts Row -->
    <div class="row g-4 mb-4">
        <!-- Application to Interview Ratio -->
        <div class="col-12 col-lg-6">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fw-semibold">Application to Interview Ratio</h6>
                    <select class="form-select form-select-sm" style="width: auto; max-width: 200px;" id="ratioTimeframe">
                        <option value="all">All Time</option>
                        <option value="month">This Month</option>
                        <option value="quarter">This Quarter</option>
                        <option value="year">This Year</option>
                    </select>
                </div>
                <div class="chart-container" style="height: 300px; position: relative;">
                    <canvas id="ratioChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Application Status Distribution -->
        <div class="col-12 col-lg-6">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fw-semibold">Application Status Distribution</h6>
                </div>
                <div class="chart-container" style="height: 300px; position: relative;">
                    <canvas id="statusChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Monthly Trends and Top Skills -->
    <div class="row g-4 mb-4">
        <!-- Monthly Application Trends -->
        <div class="col-12 col-lg-8">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fw-semibold">Monthly Application Trends</h6>
                    <select class="form-select form-select-sm" style="width: auto; max-width: 150px;" id="trendTimeframe">
                        <option value="6">Last 6 Months</option>
                        <option value="12">Last 12 Months</option>
                    </select>
                </div>
                <div class="chart-container" style="height: 300px; position: relative;">
                    <canvas id="trendChart"></canvas>
                </div>
            </div>
        </div>
        
        <!-- Top Skills in Demand -->
        <div class="col-12 col-lg-4">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h6 class="mb-0 fw-semibold">Top Skills in Demand</h6>
                </div>
                <div class="skills-list">
                    {% for skill in topSkills %}
                    <div class="skill-item mb-3">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-medium" style="font-size: 14px; color: #121C0C;">{{ skill.skill }}</span>
                            <span class="text-muted small">{{ skill.count }} jobs</span>
                        </div>
                        <div class="progress" style="height: 8px; background-color: #F4F9F1; border-radius: 4px;">
                            <div class="progress-bar" role="progressbar" style="width: {{ skill.percentage }}%; background-color: #85BB65; border-radius: 4px;" aria-valuenow="{{ skill.percentage }}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    
    <!-- Detailed Statistics Row -->
    <div class="row g-4">
        <!-- Application Statistics -->
        <div class="col-12 col-lg-6">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <h6 class="mb-4 fw-semibold">Application Statistics</h6>
                <div class="stats-grid">
                    <div class="stat-item p-3 mb-3 rounded" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-muted small mb-1">Total Applications</div>
                                <div class="fw-bold" style="font-size: 1.5rem; color: #121C0C;">{{ totalApplications }}</div>
                            </div>
                            <div style="width: 40px; height: 40px; background: #EAF3E4; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M14 2H6c-1.1 0-1.99.9-1.99 2L4 20c0 1.1.89 2 1.99 2H18c1.1 0 2-.9 2-2V8l-6-6zm2 16H8v-2h8v2zm0-4H8v-2h8v2zm-3-5V3.5L18.5 9H13z" fill="#85BB65"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="stat-item p-3 mb-3 rounded" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="text-muted small mb-1">Saved Jobs</div>
                                <div class="fw-bold" style="font-size: 1.5rem; color: #121C0C;">{{ totalBookmarks }}</div>
                            </div>
                            <div style="width: 40px; height: 40px; background: #EAF3E4; border-radius: 8px; display: flex; align-items: center; justify-content: center;">
                                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M17 3H7c-1.1 0-2 .9-2 2v16l7-3 7 3V5c0-1.1-.9-2-2-2z" fill="#85BB65"/>
                                </svg>
                            </div>
                        </div>
                    </div>
                    <div class="row g-2">
                        <div class="col-6">
                            <div class="stat-item p-3 rounded text-center" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                                <div class="text-muted small mb-1">Applied</div>
                                <div class="fw-bold" style="font-size: 1.25rem; color: #121C0C;">{{ statusCounts.applied }}</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item p-3 rounded text-center" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                                <div class="text-muted small mb-1">Interview</div>
                                <div class="fw-bold" style="font-size: 1.25rem; color: #121C0C;">{{ statusCounts.interview }}</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item p-3 rounded text-center" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                                <div class="text-muted small mb-1">Accepted</div>
                                <div class="fw-bold" style="font-size: 1.25rem; color: #121C0C;">{{ statusCounts.accepted }}</div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="stat-item p-3 rounded text-center" style="background: #F4F9F1; border: 1px solid #e6eef6;">
                                <div class="text-muted small mb-1">Completed</div>
                                <div class="fw-bold" style="font-size: 1.25rem; color: #121C0C;">{{ statusCounts.completed }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Performance Metrics -->
        <div class="col-12 col-lg-6">
            <div class="analytics-chart-card shadow-sm rounded-3 p-4 h-100">
                <h6 class="mb-4 fw-semibold">Performance Metrics</h6>
                <div class="performance-metrics">
                    <div class="metric-bar mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-medium" style="font-size: 14px; color: #121C0C;">Profile Completion</span>
                            <span class="fw-bold" style="color: #85BB65;">92%</span>
                        </div>
                        <div class="progress" style="height: 10px; background-color: #F4F9F1; border-radius: 5px;">
                            <div class="progress-bar" role="progressbar" style="width: 92%; background-color: #85BB65; border-radius: 5px;" aria-valuenow="92" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="metric-bar mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-medium" style="font-size: 14px; color: #121C0C;">Response Time</span>
                            <span class="fw-bold" style="color: #85BB65;">2.4 hrs</span>
                        </div>
                        <div class="progress" style="height: 10px; background-color: #F4F9F1; border-radius: 5px;">
                            <div class="progress-bar" role="progressbar" style="width: 78%; background-color: #06b6d4; border-radius: 5px;" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="metric-bar mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-medium" style="font-size: 14px; color: #121C0C;">Interview Success Rate</span>
                            <span class="fw-bold" style="color: #85BB65;">{{ ratio }}%</span>
                        </div>
                        <div class="progress" style="height: 10px; background-color: #F4F9F1; border-radius: 5px;">
                            <div class="progress-bar" role="progressbar" style="width: {{ ratio }}%; background-color: #85BB65; border-radius: 5px;" aria-valuenow="{{ ratio }}" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="metric-bar mb-4">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <span class="fw-medium" style="font-size: 14px; color: #121C0C;">Job Match Score</span>
                            <span class="fw-bold" style="color: #85BB65;">87%</span>
                        </div>
                        <div class="progress" style="height: 10px; background-color: #F4F9F1; border-radius: 5px;">
                            <div class="progress-bar" role="progressbar" style="width: 87%; background-color: #85BB65; border-radius: 5px;" aria-valuenow="87" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Chart.js Library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Application to Interview Ratio - Doughnut Chart
    const ratioCtx = document.getElementById('ratioChart').getContext('2d');
    const ratioChart = new Chart(ratioCtx, {
        type: 'doughnut',
        data: {
            labels: ['Interviews', 'Applied', 'Pending'],
            datasets: [{
                data: [{{ statusCounts.interview }}, {{ statusCounts.applied }}, {{ totalApplications - statusCounts.applied - statusCounts.interview }}],
                backgroundColor: ['#85BB65', '#06b6d4', '#e6eef6'],
                borderWidth: 0,
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 15,
                        font: {
                            family: 'Urbanist',
                            size: 12
                        },
                        color: '#121C0C'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: {
                        family: 'Lexend',
                        size: 14
                    },
                    bodyFont: {
                        family: 'Urbanist',
                        size: 12
                    }
                }
            },
            cutout: '70%'
        }
    });
    
    // Application Status Distribution - Pie Chart
    const statusCtx = document.getElementById('statusChart').getContext('2d');
    const statusChart = new Chart(statusCtx, {
        type: 'pie',
        data: {
            labels: ['Applied', 'Interview', 'Negotiating', 'Accepted', 'Completed', 'Rejected'],
            datasets: [{
                data: [
                    {{ statusCounts.applied }},
                    {{ statusCounts.interview }},
                    {{ statusCounts.negotiating }},
                    {{ statusCounts.accepted }},
                    {{ statusCounts.completed }},
                    {{ statusCounts.rejected }}
                ],
                backgroundColor: [
                    '#06b6d4',
                    '#85BB65',
                    '#ffa500',
                    '#10b981',
                    '#22c55e',
                    '#ef4444'
                ],
                borderWidth: 2,
                borderColor: '#fff'
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    position: 'bottom',
                    labels: {
                        padding: 15,
                        font: {
                            family: 'Urbanist',
                            size: 12
                        },
                        color: '#121C0C'
                    }
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: {
                        family: 'Lexend',
                        size: 14
                    },
                    bodyFont: {
                        family: 'Urbanist',
                        size: 12
                    }
                }
            }
        }
    });
    
    // Monthly Application Trends - Line Chart
    const trendCtx = document.getElementById('trendChart').getContext('2d');
    const monthlyLabels = {{ monthlyData|map(m => m.month)|json_encode|raw }};
    const monthlyCounts = {{ monthlyData|map(m => m.count)|json_encode|raw }};
    
    const trendChart = new Chart(trendCtx, {
        type: 'line',
        data: {
            labels: monthlyLabels,
            datasets: [{
                label: 'Applications',
                data: monthlyCounts,
                borderColor: '#85BB65',
                backgroundColor: 'rgba(133, 187, 101, 0.1)',
                borderWidth: 3,
                fill: true,
                tension: 0.4,
                pointRadius: 5,
                pointHoverRadius: 7,
                pointBackgroundColor: '#85BB65',
                pointBorderColor: '#fff',
                pointBorderWidth: 2
            }]
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: {
                    display: false
                },
                tooltip: {
                    backgroundColor: 'rgba(0, 0, 0, 0.8)',
                    padding: 12,
                    titleFont: {
                        family: 'Lexend',
                        size: 14
                    },
                    bodyFont: {
                        family: 'Urbanist',
                        size: 12
                    },
                    callbacks: {
                        label: function(context) {
                            return 'Applications: ' + context.parsed.y;
                        }
                    }
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    ticks: {
                        font: {
                            family: 'Urbanist',
                            size: 12
                        },
                        color: '#6b7280'
                    },
                    grid: {
                        color: '#e6eef6'
                    }
                },
                x: {
                    ticks: {
                        font: {
                            family: 'Urbanist',
                            size: 12
                        },
                        color: '#6b7280'
                    },
                    grid: {
                        display: false
                    }
                }
            }
        }
    });
});
</script>
{% endblock %}

