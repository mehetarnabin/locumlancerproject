{% extends 'provider/base.html.twig' %}

{% block title %}License & Certification{% endblock %}

{% block provider_body %}
    <div class="container-xl">
        <h1 class="app-page-title">License & Certification</h1>

        <hr class="mb-4">

        <section class="content">
            <div class="row">
                <div class="col-12">
                    <a href="#" class="btn btn-primary mb-4" data-bs-toggle="modal" data-bs-target="#licenseModal">
                        Add New
                    </a>

                    <div class="row">
                        {% for license in licenses %}
                            <div class="col-md-6">
                                <div class="card ed-card mb-2">
                                    <div class="card-body d-flex align-items-start">
                                        <div class="me-4">
                                            <h5 class="card-title">{{ license.name }}</h5>
                                            <p><strong>Number:</strong> {{ license.number }}</p>
{#                                            <p><strong><i class="fa fa-map-marker-alt"></i></strong> {{ license.country }}, {{ license.state }}, {{ license.city }}</p>#}

                                            <div class="mt-3">
                                                <a href="#" class="edit-license"
                                                   data-id="{{ license.id }}"
                                                   data-bs-toggle="modal"
                                                   data-bs-target="#editLicenseModal"
                                                   title="Edit">
                                                    <img src="{{ asset('assets/icons/compose.png') }}" class="icon-image" /> &nbsp; &nbsp;
                                                </a>

                                                <a href="{{ path('app_provider_license_delete', {'id': license.id}) }}"
                                                   class=""
                                                   onclick="return confirm('Are you sure? Do you want to remove this item?');">
                                                    <img src="{{ asset('assets/icons/trash-bin.png') }}" class="icon-image" />
                                                </a>
                                            </div>
                                        </div>

                                        <div class="ms-auto">
                                            <p><strong>Issue Date:</strong> {{ license.issueDate ? license.issueDate|date('m/d/Y') : '' }}</p>
                                            {% if license.expirationDate %}
                                            <p><strong>Expiration Date:</strong> {{ license.expirationDate ? license.expirationDate|date('m/d/Y') : '' }}</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>

                            </div>
                        {% else %}
                            <p>No records found.</p>
                        {% endfor %}
                    </div>

                    <a href="{{ path('app_provider_experience_index') }}" class="btn btn-primary mt-4">
                        Continue
                    </a>
                </div>
            </div>
        </section>
    </div>

    <!-- Add License Modal -->
    <div class="modal fade" id="licenseModal" tabindex="-1" aria-labelledby="licenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="licenseModalLabel">Add License & Certification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    {% include 'provider/license/_form.html.twig' %}
                </div>
            </div>
        </div>
    </div>

    <!-- Edit License Modal -->
    <div class="modal fade" id="editLicenseModal" tabindex="-1" aria-labelledby="editLicenseModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editLicenseModalLabel">Edit License & Certification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div id="editLicenseFormContainer">
                        <!-- Form will be loaded here via AJAX -->
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block footer_scripts %}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="{{ asset('assets/admin/js/form-validation.js') }}"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>

    <script>
        $(".js-datepicker").flatpickr();
    </script>

    <script>
        let clickedButton = null;
        $(document).ready(function () {
            // Track which submit button was clicked
            $('#licenseModal button[type=submit]').on('click', function () {
                clickedButton = $(this);
            });

            $('#licenseModal form').submit(function (e) {
                var form = $(this)[0]; // Get the native form element
                if (!form.checkValidity()) {
                    e.preventDefault();
                    e.stopPropagation();
                    form.classList.add('was-validated'); // Apply Bootstrap validation styles
                    return false;
                }

                e.preventDefault();

                var form = $(this);
                $.ajax({
                    type: 'POST',
                    url: form.attr('action'),
                    data: form.serialize(),
                    success: function () {
                        $('#licenseModal').modal('hide');

                        // If save_continue button was clicked and has redirect URL, redirect
                        if (clickedButton && clickedButton.attr('name') === 'save_continue' && clickedButton.data('redirect-url')) {
                            window.location.href = clickedButton.data('redirect-url');
                        } else {
                            location.reload(); // Normal Save just reloads the page
                        }
                    },
                    error: function () {
                        alert("Error occurred while saving.");
                    }
                });
            });
        });

        document.querySelectorAll('.edit-license').forEach(button => {
            button.addEventListener('click', function (event) {
                event.preventDefault();
                let licenseId = this.dataset.id;

                fetch(`/provider/application/license/${licenseId}/edit`, {
                    headers: { 'X-Requested-With': 'XMLHttpRequest' }
                })
                    .then(response => response.json())
                    .then(data => {
                        document.getElementById('editLicenseFormContainer').innerHTML = data.form;

                        // Re-initialize flatpickr for dynamically added date fields
                        $(".js-datepicker").flatpickr();
                    })
                    .catch(error => console.error('Error loading form:', error));
            });
        });
    </script>
{% endblock %}
