<script>
document.addEventListener('DOMContentLoaded', function () {
  const headers = document.querySelectorAll('.sortable');
  let currentSort = { key: null, direction: 'asc' };

  headers.forEach(header => {
    header.addEventListener('click', () => {
      const key = header.dataset.sort;
      const direction = (currentSort.key === key && currentSort.direction === 'asc') ? 'desc' : 'asc';
      currentSort = { key, direction };

      // Reset all icons
      document.querySelectorAll('.sort-toggle svg').forEach(svg => {
        svg.style.transform = 'rotate(0deg)';
      });

      // Rotate active icon
      const icon = header.querySelector('.sort-toggle svg');
      if (icon) {
        icon.style.transform = direction === 'asc' ? 'rotate(0deg)' : 'rotate(180deg)';
      }

      sortJobs(key, direction);
    });
  });

  function sortJobs(key, direction) {
    const rows = Array.from(document.querySelectorAll('.job-row')).map(row => ({
      element: row,
      job: {
        job: row.querySelector('.job-title')?.textContent.trim().toLowerCase(),
        location: row.querySelector('.col-start:nth-child(3)')?.textContent.trim().toLowerCase(),
        posted: row.querySelector('.col-start:nth-child(4)')?.textContent.trim(),
        expires: row.querySelector('.col-expiry')?.textContent.trim(),
        salary: parseFloat(row.querySelector('.col-start:nth-child(5)')?.textContent.trim()) || 0,
        match: parseInt(row.querySelector('.col-start:nth-child(6)')?.textContent.trim()) || 0,
        rank: parseInt(row.querySelector('.col-rank')?.textContent.trim()) || 0
      }
    }));

    rows.sort((a, b) => {
      const valA = a.job[key];
      const valB = b.job[key];
      if (typeof valA === 'string') {
        return direction === 'asc' ? valA.localeCompare(valB) : valB.localeCompare(valA);
      } else {
        return direction === 'asc' ? valA - valB : valB - valA;
      }
    });

    const container = document.querySelector('.job-list-container');
    rows.forEach(row => container.appendChild(row.element.parentElement));
  }
});
</script>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const rankDisplays = document.querySelectorAll('.rank-display');
    const rankInputs = document.querySelectorAll('.rank-input');

    function saveRank(input) {
        let value = parseInt(input.value, 10);
        const jobId = input.dataset.jobId;

        if (isNaN(value) || value < 1) {
            alert('Rank must be a positive number.');
            input.value = input.dataset.originalValue || '';
            return;
        }

        // Only proceed if value changed (treat null/empty as changed)
        if (input.dataset.originalValue !== undefined &&
            input.dataset.originalValue !== '' &&
            value === parseInt(input.dataset.originalValue, 10)) {
            input.classList.add('hidden');
            input.previousElementSibling.classList.remove('hidden');
            return;
        }

        // Check duplicates among other inputs (ignore empty/invalid)
        const otherRanks = Array.from(rankInputs)
            .filter(i => i !== input)
            .map(i => parseInt(i.value, 10))
            .filter(v => !isNaN(v));

        if (otherRanks.includes(value)) {
            alert('Each rank must be unique.');
            input.value = input.dataset.originalValue || '';
            return;
        }

        // AJAX request to update rank
        fetch('{{ path("app_update_rank") }}', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'X-Requested-With': 'XMLHttpRequest'
            },
            body: JSON.stringify({ jobId, rank: value })
        })
        .then(res => res.json())
        .then(data => {
            if (data.success) {
                // Update display and original value
                const display = input.previousElementSibling;
                display.textContent = value;
                input.dataset.originalValue = value;
                input.classList.add('hidden');
                display.classList.remove('hidden');

                // Show success toaster
                let msg = document.getElementById('rank-success-msg');
                if (!msg) {
                    msg = document.createElement('div');
                    msg.id = 'rank-success-msg';
                    msg.style.position = 'fixed';
                    msg.style.top = '20px';
                    msg.style.right = '20px';
                    msg.style.backgroundColor = '#4CAF50';
                    msg.style.color = 'white';
                    msg.style.padding = '10px 15px';
                    msg.style.borderRadius = '5px';
                    msg.style.zIndex = '9999';
                    document.body.appendChild(msg);
                }
                msg.textContent = 'Rank updated successfully!';
                msg.style.display = 'block';
                setTimeout(() => { msg.style.display = 'none'; }, 2000);

            } else {
                alert('Failed to update rank: ' + (data.error || 'Unknown error'));
                input.value = input.dataset.originalValue || '';
            }
        })
        .catch(err => {
            console.error('Fetch error:', err);
            alert('Server error while updating rank.');
            input.value = input.dataset.originalValue || '';
        });
    }

    // Initialize original values for all inputs
    rankInputs.forEach(input => {
        input.dataset.originalValue = input.value || '';
    });

    // Show input on click
    rankDisplays.forEach(display => {
        display.addEventListener('click', function () {
            const input = this.nextElementSibling;
            input.classList.remove('hidden');
            this.classList.add('hidden');
            input.focus();
            input.select();
        });
    });

    // Handle blur and key events
    rankInputs.forEach(input => {
        input.addEventListener('blur', () => saveRank(input));
        input.addEventListener('keydown', e => {
            if (e.key === 'Enter') {
                e.preventDefault();
                saveRank(input);
            }
            if (e.key === 'Escape') {
                const display = input.previousElementSibling;
                input.value = input.dataset.originalValue || '';
                input.classList.add('hidden');
                display.classList.remove('hidden');
            }
        });
    });
});
</script>


