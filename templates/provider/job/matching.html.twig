/* Consistent rounded rectangle style for all job list checkboxes */
.job-list-container input[type="checkbox"].job-check,
#select-all-checkbox,
.job-check {
  -webkit-appearance: none;
  appearance: none;
  width: 18px;
  height: 18px;
  border: 1px solid #cfd9e3;
  border-radius: 4px;
  background: #fff;
  cursor: pointer;
  position: relative;
  display: inline-block;
