<div class="job-detail-content" data-job-id="{{ job.id }}">
    {# Header Section #}
    <div class="job-detail-header">
        <div class="job-detail-logo-container">
            <img src="{{ asset('assets/icons/job.png') }}" 
                 alt="{{ job.employer }} Logo" 
                 class="job-detail-logo"
                 onerror="this.src='{{ asset('assets/icons/job.png') }}'">
        </div>
        <div class="job-detail-info">
            <h1 class="job-detail-title">{{ job.title }}</h1>
            <div class="job-detail-company">{{ job.employer }}</div>
        </div>
    </div>

    {# Key Metrics Grid #}
    <div class="job-detail-meta">
        
        
        <div class="job-detail-meta-item">
            <div class="job-detail-meta-label">
                <i class="fas fa-clock"></i> Schedule
            </div>
            <div class="job-detail-meta-value">{{ job.schedule ? job.schedule : 'Not specified' }}</div>
        </div>
        
        <div class="job-detail-meta-item">
            <div class="job-detail-meta-label">
                <i class="fas fa-briefcase"></i> Work Type
            </div>
            <div class="job-detail-meta-value">{{ job.workType ? job.workType : 'Not specified' }}</div>
        </div>
        
        <div class="job-detail-meta-item">
            <div class="job-detail-meta-label">
                <i class="fas fa-calendar-alt"></i> Start Date
            </div>
            <div class="job-detail-meta-value">{{ job.startDate ? job.startDate|date('m/d/Y') : 'Not specified' }}</div>
        </div>
        
        
    </div>

    {# Job Description #}
    {% if job.description %}
    <div class="job-detail-section">
        <h3 class="job-detail-section-title">
            <i class="fas fa-file-alt"></i> Job Description
        </h3>
        <div class="job-detail-description">
            {{ job.description|raw }}
        </div>
    </div>
    {% endif %}

    {# Additional Details #}
    <div class="job-detail-section">
        <h3 class="job-detail-section-title">
            <i class="fas fa-info-circle"></i> Job Details
        </h3>
        <div class="job-details-grid">
            <div class="job-detail-item">
                <strong>Job ID:</strong> {{ job.jobId }}
            </div>
            <div class="job-detail-item">
                <strong>Employer:</strong> {{ job.employer }}
            </div>
            {% if job.payRate %}
            <div class="job-detail-item">
                <strong>Pay Rate:</strong> {{ job.payRate }}
            </div>
            {% endif %}
            {% if job.payRateDaily %}
            <div class="job-detail-item">
                <strong>Pay Rate (Daily):</strong> {{ job.payRateDaily }}
            </div>
            {% endif %}
            {% if job.need %}
            <div class="job-detail-item">
                <strong>Position Need:</strong> {{ job.need }}
            </div>
            {% endif %}
            {% if job.expirationDate %}
            <div class="job-detail-item">
                <strong>Expires:</strong> {{ job.expirationDate|date('m/d/Y') }}
            </div>
            {% endif %}
        </div>
    </div>

    {# Action Buttons #}
    <div class="job-detail-actions">
        {% if job.id not in appliedJobsIds %}
            <button class="action-btn btn-apply" onclick="applyToJob('{{ job.id }}')">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M9.71 11.29a1 1 0 0 0-1.42 1.42l3 3A1 1 0 0 0 12 16a1 1 0 0 0 .72-.34l7-8a1 1 0 0 0-1.5-1.32L12 13.54z" fill="currentColor"/>
                </svg>
                Apply Now
            </button>
        {% else %}
            <button class="action-btn btn-applied" disabled>
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z" fill="currentColor"/>
                </svg>
                Already Applied
            </button>
        {% endif %}
        
        <button class="action-btn btn-save" onclick="saveJob('{{ job.id }}')">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="M17.5 1.25a.5.5 0 0 1 1 0v2.5H21a.5.5 0 0 1 0 1h-2.5v2.5a.5.5 0 0 1-1 0v-2.5H15a.5.5 0 0 1 0-1h2.5v-2.5zm-11 4.5a1 1 0 0 1 1-1H11a.5.5 0 0 0 0-1H7.5a2 2 0 0 0-2 2v14a.5.5 0 0 0 .8.4l5.7-4.4 5.7 4.4a.5.5 0 0 0 .8-.4v-8.5a.5.5 0 0 0-1 0v7.48l-5.2-4a.5.5 0 0 0-.6 0l-5.2 4V5.75z" fill="currentColor"/>
            </svg>
            Save Job
        </button>
        
        <a href="{{ path('app_provider_jobs_detail', {'id': job.id}) }}" class="action-btn btn-view-details">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none">
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" stroke="currentColor" stroke-width="2"/>
                <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" stroke="currentColor" stroke-width="2"/>
            </svg>
            View Full Details
        </a>
    </div>
</div>