{% block body %}
    <style>
        .error-container {
            text-align: center;
            margin-bottom: 20px;
        }
        .error-code {
            font-size: 8rem;
            font-weight: bold;
            color: #dc3545;
        }
        .error-text {
            font-size: 1.5rem;
            color: #6c757d;
        }
    </style>

    <div class="container error-container">
        <div class="error-code">500</div>
        <h2 class="error-text">Oops! Something went wrong.</h2>
        <p class="mb-4">We're experiencing some technical issues. Please try again later.</p>
        <a href="{{ path('app_home') }}" class="btn  th-btn ">Go to Homepage</a>
    </div>
{% endblock %}