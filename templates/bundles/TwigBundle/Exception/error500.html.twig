{% if app.user is not null and app.user.userType == 'ADMIN' %}
    {% set template = 'admin/base.html.twig' %}
{% elseif app.user is not null and app.user.userType == 'EMPLOYER' %}
    {% set template = 'employer/base.html.twig' %}
{% elseif app.user is not null and app.user.userType == 'PROVIDER' %}
    {% set template = 'provider/base.html.twig' %}
{% else %}
    {% set template = 'base.html.twig' %}
{% endif %}

{% extends template %}

{% block title %}500 - Internal Server Error{% endblock %}

{% block admin_body %}
    <div class="container mb-5">
        <div class="row">
            <div class="col-12 col-md-11 col-lg-7 col-xl-6 mx-auto">
                <div class="app-card p-5 text-center shadow-sm">
                    <h1 class="page-title mb-4">500<br><span class="font-weight-light">Oops! Something went wrong.</span></h1>
                    <div class="mb-4">
                        We're experiencing some technical issues. Please try again later.
                    </div>
                    <a class="btn btn-primary" href="{{ path('app_admin_dashboard') }}">Go to Dashboard</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

