{% extends 'emails/base.html.twig' %}

{% block body %}

    <h4 class="text-center text-semi-bold">Hi!</h4>

    <p class="text-center">To reset your password, please visit the following link</p>

    <spacer size="16"></spacer>

    <center>
        <button class="small-expanded" href="{{ url('app_reset_password', {token: resetToken.token}) }}">Reset Password</button>
    </center>

    <spacer size="16"></spacer>

    <p class="text-center">This link will expire in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}.</p>

{% endblock %}