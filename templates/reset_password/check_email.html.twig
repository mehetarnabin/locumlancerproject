{% extends 'base.html.twig' %}

{% block title %}Password Reset Email Sent{% endblock %}

{% block body %}
    <section class="section">
        <div class="lm-container">
            <div class="section-title-wrap">
                <h2 class="section-title m-0 pb-3 section-title-small">
                    Password Reset Email Sent
                </h2>
            </div>
            <div class="content-area">
                <p>
                    If an account matching your email exists, then an email was just sent that contains a link that you
                    can use to reset your password.
                    This link will expire
                    in {{ resetToken.expirationMessageKey|trans(resetToken.expirationMessageData, 'ResetPasswordBundle') }}
                    .
                </p>
                <p>If you don't receive an email please check your spam folder or <a
                            href="{{ path('app_forgot_password_request') }}">try again</a>.</p>
            </div>
        </div>
    </section>
{% endblock %}
