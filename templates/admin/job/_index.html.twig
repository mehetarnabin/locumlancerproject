{% block admin_body %}
<div class="container-xl">

    <h1 class="app-page-title">Jobs</h1>

{#    <div id="jobs">Loading...</div>#}

    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
            <tr>
                <th>ID</th>
                <th>Job</th>
                <th>Employer</th>
                <th>CreatedAt</th>
                <th>Status</th>
{#                <th>Verified</th>#}
                <th>Action</th>
            </tr>
            </thead>
            <tbody>
            {% for job in jobs %}
                <tr>
                    <td>{{ job.jobId}}</td>
                    <td>{{ job.title}}</td>
                    <td>{{ job.employer }}</td>
                    <td>{{ job.createdAt|date('m/d/Y') }}</td>
                    <td>{{ job.status }}</td>
{#                    <td>{{ job.verified ? 'YES' : 'NO' }}</td>#}
                    <td>
                        <a href="{{ path('app_admin_job_detail', {'id': job.id}) }}" title="Details">
                            <img src="{{ asset('assets/icons/binoculars.png') }}" class="icon-image" />
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="12">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if jobs.nbPages > 1 %}
            <div class="col-12">
                {{ pagerfanta(jobs, 'twitter_bootstrap5') }}
            </div>
        {% endif %}

    </div>

</div>
{% endblock %}

