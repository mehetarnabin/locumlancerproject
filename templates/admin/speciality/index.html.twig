{% extends 'admin/base.html.twig' %}

{% block title %}Specialities{% endblock %}

{% block admin_body %}
<div class="container-xl">
    <h1 class="app-page-title">Specialities</h1>

    <a href="{{ path('app_admin_speciality_new') }}" class="btn btn-sm btn-primary mb-4">Create new</a>

    <div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Profession</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for speciality in specialities %}
            <tr>
                <td>{{ speciality.name }}</td>
                <td>{{ speciality.profession }}</td>
                <td class="text-nowrap">
                    <a href="{{ path('app_admin_speciality_edit', {'id': speciality.id}) }}" title="Edit"><img src="{{ asset('assets/icons/file.png') }}" class="icon-image" /></a>
                    &nbsp;&nbsp;
                    <a href="{{ path('app_admin_speciality_delete', {'id': speciality.id}) }}" title="Delete" onclick="return confirm('Are you sure? Do you want to delete this item?');"><img src="{{ asset('assets/icons/trash.png') }}" class="icon-image" /></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
</div>
{% endblock %}
