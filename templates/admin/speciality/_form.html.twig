<div class="col-6">
{{ form_start(form, {'attr': {'class': 'job-posting-form needs-validation', 'novalidate': 'novalidate'}}) }}
<div class="app-card app-card-settings shadow-sm p-4">
    <div class="app-card-body">

        {{ form_errors(form) }}

        <div class="mb-3">
            {{ form_label(form.profession, 'Profession', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.profession, {'attr': {'class': 'form-control', 'placeholder': 'Select profession'}}) }}
            {{ form_errors(form.profession) }}
            <div class="invalid-feedback">
                Please select profession.
            </div>
        </div>

        <div class="mb-3">
            {{ form_label(form.name, 'Speciality Name', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Enter speciality name'}}) }}
            {{ form_errors(form.name) }}
            <div class="invalid-feedback">
                Please provide a valid speciality name.
            </div>
        </div>

    </div>
</div>

<div class="mt-3">
    <button type="submit" class="btn btn-primary px-4">{{ button_label|default('Save') }}</button>
</div>

{{ form_end(form) }}
</div>