{% extends 'admin/base.html.twig' %}

{% block title %}Users{% endblock %}

{% block admin_body %}
    <div class="container-xl">

        <h1 class="app-page-title">Admin Users</h1>

        <a href="{{ path('admin_user_new') }}" class="btn btn-sm btn-primary mb-4">Add New</a>

        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                        <td class="text-nowrap">
                            <a href="{{ path('admin_user_edit', {'id': user.id}) }}" title="Edit"><img
                                        src="{{ asset('assets/icons/file.png') }}" class="icon-image"/></a>
                            &nbsp;&nbsp;
                            <a href="{{ path('admin_user_delete', {'id': user.id}) }}" title="Delete"
                               onclick="return confirm('Are you sure? Do you want to delete this user?');"><img
                                        src="{{ asset('assets/icons/trash.png') }}" class="icon-image"/></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}