{% extends 'admin/base.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block admin_body %}
    <div class="container-xl">

        <h1 class="app-page-title">{{ form.vars.value.id ? 'Edit User' : 'Add User' }}</h1>

        {{ form_start(form) }}
        {{ form_row(form.name, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_row(form.email, {'attr': {'class': 'form-control mb-2'}}) }}
        {{ form_row(form.password, {'attr': {'class': 'form-control mb-2'}}) }}

        <div>
            <label>Admin Roles</label>
            {% for checkbox in form.roles %}
                <div style="margin-bottom: 5px;">
                    {{ form_widget(checkbox) }}
                    {{ form_label(checkbox) }}
                </div>
            {% endfor %}
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        {{ form_end(form) }}

    </div>
{% endblock %}