<script>
document.addEventListener('DOMContentLoaded', function () {
    const featureCards = document.querySelectorAll('.card-feature-2');
    const featureImages = document.querySelectorAll('.feature-image');

    featureCards.forEach(card => {
        card.addEventListener('mouseenter', function() {
            // Remove active classes from all images and h3s
            featureImages.forEach(img => img.classList.remove('active-image'));
            featureCards.forEach(h3 => h3.classList.remove('active-h3'));

            // Get the target image ID from the data attribute
            const targetId = this.getAttribute('data-feature-target');
            const targetImage = document.getElementById(`img-${targetId}`);
            
            // Add active class to the hovered h3 and the corresponding image
            if (targetImage) {
                targetImage.classList.add('active-image');
                this.classList.add('active-h3');
            }
        });
    });
});
</script>

