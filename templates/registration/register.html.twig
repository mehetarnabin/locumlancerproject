{% extends 'auth_base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block body %}
    <section class="section">
        <div class="lm-container ">
            <div class="form-container">
                <div class="section-title-wrap">
                    <h2 class="section-title text-center">
                        Signup
                    </h2>
                </div>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_start(registrationForm) }}

                <div class="switcher mb-12">
                    <div>
                        <div id="registration_form_userType">
                            {% for choice in registrationForm.userType %}
                                <div>
                                    <label>
                                        <input
                                            required
                                            type="radio"
                                            name="{{ registrationForm.userType.vars.full_name }}"
                                            value="{{ choice.vars.value }}"
                                            {% if app.request.get('u') == 'EMPLOYER' %}
                                                checked
                                            {% elseif choice.vars.value == 'PROVIDER' %}
                                                checked
                                            {% endif %}
                                        >
                                        <span>
                                            {{ choice.vars.label }}
                                        </span>
                                    </label>
                                </div>
                            {% endfor %}
                        </div>
                        {# Mark userType as rendered to prevent re-rendering #}
                        {% do registrationForm.userType.setRendered %}
                    </div>
                </div>

                <div class="form-group mb-12">
                    {{ form_row(registrationForm.email, {'attr': {'placeholder': 'eg. john@example.com'}}) }}
                </div>

                <div class="form-group mb-12">
