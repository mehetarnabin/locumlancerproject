{% extends 'employer/base.html.twig' %}

{% block title %}Interview Calendar{% endblock %}

{% block employer_body %}
    <div class="container-xl">
        <h1 class="app-page-title">Interview Calendar</h1>

        {# Uncomment the filters below if you want to enable filtering #}
        {#
        <div class="row mb-3">
            <div class="col-md-4">
                <label class="form-label">Filter by Platform</label>
                <select id="platformFilter" class="form-select">
                    <option value="">All</option>
                    <option value="Zoom">Zoom</option>
                    <option value="Google Meet">Google Meet</option>
