{% extends 'employer/base.html.twig' %}

{% block title %}Past Jobs{% endblock %}

{% block employer_body %}
    {% set statusColors = {
        'draft': 'applied',
        'published': 'interview',
        'paused': 'review',
        'closed': 'rejected'
    } %}

    <div class="container-xl">

        <h1 class="app-page-title">Past Jobs</h1>
        <div class="table-responsive">
            <table class="table">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Location</th>
                    <th>Status</th>
                    <th>ExpiredAt</th>
                    <th>CreatedAt</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr>
                        <td><a href="{{ path('app_employer_job_show', {'id': job.id}) }}">{{ job.title }}</a></td>
                        <td>{{ job.state }}, {{ job.city }}</td>
                        <td>
                            <span class="badge badge-pill is-{{ statusColors[job.status] ?? 'dark' }}">
                                {{ job.status|capitalize }}
                            </span>
                        </td>
                        <td>{{ job.expirationDate ? job.expirationDate|date('m/d/Y') : '' }}</td>
                        <td>{{ job.createdAt ? job.createdAt|date('m/d/Y') : '' }}</td>
                        <td>
                            {#                    <a href="{{ path('app_employer_job_show', {'id': job.id}) }}" class="btn btn-secondary btn-xs btn-sm" title="Show"><i class="fa fa-eye"></i></a> #}
                            {#                    <a href="{{ path('app_employer_job_edit', {'id': job.id}) }}" class="btn btn-info btn-xs btn-sm" title="Edit"><i class="fa fa-pen"></i></a> #}
                            <a href="{{ path('app_employer_job_applications', {'id': job.id}) }}"
                                title="Applications"><i class="fa fa-list"></i></a>
                            &nbsp;
                            <a href="{{ path('app_employer_job_delete', {'id': job.id}) }}"
                               title="Remove" onclick="return confirm('Are you sure? Do you want to delete this job.')"><i class="fa fa-trash"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="12">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
