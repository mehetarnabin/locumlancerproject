<header class="main-header">
    <div class="main-header__wrapper">
        <div class="lm-container">
            <a class="logo" href="{{ path('app_home') }}">
               Locum<span style="color:#121C0C;padding: 7px;">lancer</span>
            </a>
            <nav class="main-header__nav">
                <ul>
                    <li {% if app.request.get('_route') == 'app_jobs' %}class="active"{% endif %}>
                        <a href="{{ path('app_jobs') }}">Jobs</a>
                    </li>
                    <li {% if app.request.get('_route') == 'app_for_providers' %}class="active"{% endif %}>
                        <a href="{{ path('app_for_providers') }}">Providers</a>
                    </li>
                    <li {% if app.request.get('_route') == 'app_for_employers' %}class="active"{% endif %}>
                        <a href="{{ path('app_for_employers') }}">Employers</a>
                    </li>
                    <li><a href="#">Recruiters</a></li>
                    <li><a href="#">Lounge</a></li>
                </ul>
            </nav>
            <a class="hamburger"><span></span><span></span><span></span></a>

            {% if app.user is null %}
                <div class="header-right">
                    <a class="th-btn th-btn-outline" href="{{ path('app_login') }}">Login</a>
                    <a href="{{ path('app_register') }}" class="btn th-btn">Sign up</a>
                </div>
            {% endif %}

            {% if app.user is not null and  app.user.userType == 'PROVIDER' %}
                {% set dashboard_url = 'app_provider_dashboard' %}
                {% set profile_url = 'app_provider_profile' %}
            {% elseif app.user is not null and app.user.userType == 'EMPLOYER' %}
                {% set dashboard_url = 'app_employer_dashboard' %}
                {% set profile_url = 'app_employer_profile' %}
            {% elseif app.user is not null and app.user.userType == 'ADMIN' %}
                {% set dashboard_url = 'app_admin_dashboard' %}
                {% set profile_url = 'app_admin_profile' %}
            {% else %}
                {% set dashboard_url = 'app_home' %}
                {% set profile_url = 'app_home' %}
            {% endif %}

            {% if app.user is not null %}
                <div class="header-user-info">
                    <div class="dashboard-icon-container">
                    <a href="{{ path(dashboard_url) }}" class="logged-in-user profile-icon dashboard-icon">
                         <svg fill="currentcolor" class="icon-image" viewBox="0 -1.1 16 16" xmlns="http://www.w3.org/2000/svg">

                        <g id="Layer_2" data-name="Layer 2">

                        <g id="Layer_1-2" data-name="Layer 1">

